const text = "COMPÃ‰TENCES INFORMATIQUE";
    const speed = 100;
    const eraseSpeed = 50;
    const pause = 1500;

    let i = 0;
    let typing = true;
    const el = document.getElementById("typewriter-text");

    function typeEffect() {
      if (typing) {
        if (i < text.length) {
          el.textContent += text.charAt(i);
          i++;
          setTimeout(typeEffect, speed);
        } else {
          typing = false;
          setTimeout(typeEffect, pause);
        }
      } else {
        if (i > 0) {
          el.textContent = text.substring(0, i - 1);
          i--;
          setTimeout(typeEffect, eraseSpeed);
        } else {
          typing = true;
          setTimeout(typeEffect, speed);
        }
      }
    }

    typeEffect();